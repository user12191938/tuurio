    <td><%= sport_trainer.subjectArea %></td>
    <td><%= sport_trainer.focus %></td>
    <td><%= sport_trainer.phone %></td>
    <td><%= sport_trainer.sportFacility %></td>
    <td><%= link_to 'Show', sport_trainer %></td>
    <td><%= link_to 'Edit', edit_sport_trainer_path(sport_trainer) %></td>
    <td><%= link_to 'Destroy', sport_trainer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
