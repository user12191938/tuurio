<% @sport_trainers.each do |sport_trainer| %>
  <tr>
    <td><%= sport_trainer.imagePath %></td>
    <td><%= sport_trainer.name %></td>
    <td><%= sport_trainer.surname %></td>
    <td><%= sport_trainer.description %></td>
    <td><%= sport_trainer.address %></td>
    <td><%= sport_trainer.plz %></td>
    <td><%= sport_trainer.city %></td>
    <td><%= sport_trainer.price %></td>
